FROM node:20-alpine

WORKDIR /app

# Install deps with lockfile
COPY package.json package-lock.json ./
RUN npm ci --omit=dev

# Copy prisma and generate client
COPY prisma ./prisma
RUN npx prisma generate

# Copy API source
COPY api.js ./

ENV NODE_ENV=production
ENV PORT=4000

EXPOSE 4000

CMD ["node", "api.js"] 